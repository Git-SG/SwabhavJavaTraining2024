package com.aurionpro.model;

public class Board {
	
	private int[][] matrix = new int[3][3];
	private char[][] matrix2;
	
	public Board(char[][] matrix2) {
		super();
		matrix2 = new char[3][3];
		for(int i = 0; i < matrix2.length; i++) {
			for (int j = 0; j < matrix2[0].length; j++) {
				matrix2[i][j] = '-';
			}
		}
	}

	public void createBoard() {
		System.out.println(" " + 1 + " | " + 2 + " | " + 3 + "\n" + "___|___|___\n " + 4 + " | " + 5 + " | " + 6 + "\n" + "___|___|___\n " + 7 + " | " + 8 + " | " + 9);
	}
	
	public void createBoard2() {
		System.out.println(" " + matrix[0][0] + " | " + matrix[0][1] + " | " + matrix[0][2] + "\n" + "___|___|___\n " + matrix[1][0] + " | " + 5 + " | " + 6 + "\n" + "___|___|___\n " + 7 + " | " + 8 + " | " + 9);
	}

}
